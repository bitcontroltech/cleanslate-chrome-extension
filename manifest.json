{
  "manifest_version": 3,
  "name": "Clean Slate",
  "description": "Clear cookies, localStorage data, and sessionStorage data for your browser tab",
  "homepage_url": "https://github.com/bitcontroltech/cleanslate-chrome-extension",
  "version": "1.2",
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "html/popup.html"
  },
  "permissions": [
    "cookies",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "http://*/",
    "https://*/"
  ],
  "offline_enabled": true,
  "icons": {
    "16": "images/icons/icon-16x16.png",
    "48": "images/icons/icon-48x48.png",
    "128": "images/icons/icon-128x128.png"
  },
  "author" : {
    "name": "Bit Control Technologies, Inc.",
    "email": "solutions@bitcontroltech.com"
  }
}
