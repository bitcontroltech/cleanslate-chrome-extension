{
  "manifest_version": 3,
  "name": "Clean Slate",
  "description": "Clear cookies for your browser tab",
  "version": "1.0",
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "permissions": [
    "cookies",
    "tabs"
  ],
  "host_permissions": [
    "http://*/",
    "https://*/"
  ],
  "author" : {
    "name": "Bit Control Technologies, Inc.",
    "email": "solutions@bitcontroltech.com"
  }
}
